model User {
  id                 String     @id @default(uuid())
  name               String
  email              String     @unique
  password           String
  contactNumber      String?
  role               UserRole
  profileImage       String?
  needPasswordChange Boolean    @default(true)
  isDeleted          Boolean    @default(false)
  status             UserStatus @default(ACTIVE)
  bio                String?
  travelInterests    String[] // Hiking, Food, Photography...
  visitedCountries   String[]
  currentLocation    String?
  isVerified         Boolean    @default(false)
  rating             Float      @default(0.0)

  // Relations
  travelPlans            TravelPlans[] // Plans created by this user
  travelRequestsSent     TravelRequest[] @relation("RequestsSent") // Requests this user sent
  travelRequestsReceived TravelRequest[] @relation("RequestsReceived") // Requests this user received
  reviewsGiven           Review[]        @relation("ReviewsGiven")
  reviewsReceived        Review[]        @relation("ReviewsReceived")
  payments               Payment[]
  notifications          Notification[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
